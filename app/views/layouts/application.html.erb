<!DOCTYPE html>
<html>
  <head>
    <title>ThingsToDo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', "https://fonts.googleapis.com/css?family=Limelight" %>
    <%= stylesheet_link_tag    'application', "https://fonts.googleapis.com/css?family=Faster+One" %>
    <%= stylesheet_link_tag    'application', "https://fonts.googleapis.com/css?family=Courgette" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">

                <%= link_to "Things_to_do", root_path, class:"navbar-brand" %>
            </div>

            <ul class="nav navbar-nav navbar-right">
                <% if current_user.present? %>
                   <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
                <% else %>
                   <li><%= link_to "|>About<|", about_path, class:"navbar-brand" %></li>
                   <li><%= link_to "Log In", new_user_session_path %></li>
                   <li><%= link_to "Sign Up", new_user_registration_path %></li>
                <% end %>
            </ul>

            <% if user_signed_in? %>
               <%= link_to "Create Item", new_item_path, class: "navbar-text navbar-link" %>
            <% end %>


        </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
       <%= yield %>
    </div>
</html>
